{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":dependencyDashboard",
    "github>eleboucher/mediaserver//.renovate/automerge.json5",
    "github>eleboucher/mediaserver//.renovate/customManagers.json5",
    "github>eleboucher/mediaserver//.renovate/groups.json5",
    "github>eleboucher/mediaserver//.renovate/overrides.json5",
    "github>eleboucher/mediaserver//.renovate/grafanaDashboard.json5",
    ":label(renovate)",
    ":automergeBranch",
    ":disableRateLimiting",
    ":semanticCommits",
    ":skipStatusChecks",
    ":timezone(Europe/Paris)"
  ],
  "timezone": "Europe/Paris",
  "labels": ["dependencies"],
  "flux": {
    "managerFilePatterns": ["/\\.yaml(?:\\.j2)?$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/\\.yaml(?:\\.j2)?$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml(?:\\.j2)?$/"]
  }
}
