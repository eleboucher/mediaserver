{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":timezone(Europe/Paris)",
    ":label(renovate)",
    ":semanticPrefixFix",
    ":separateMultipleMajorReleases",
    ":automergePr",
    ":automergeStableNonMajor",
    ":automergeDigest",
    ":skipStatusChecks"
  ],
  "timezone": "Europe/Paris",
  "labels": [
    "dependencies"
  ],
  "flux": {
    "managerFilePatterns": [
      "/clusters/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/clusters/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/clusters/.+\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<revision>\\d+)-ls(?<build>\\d+)$",
      "matchPackageNames": [
        "/^lscr.io\\/linuxserver\\//"
      ]
    },
    {
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-ls(?<build>\\d+)$",
      "matchPackageNames": [
        "/^lscr.io\\/linuxserver\\/bazarr/"
      ]
    },
    {
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<compatibility>ubu\\d+)-ls(?<build>\\d+)$",
      "matchPackageNames": [
        "/^lscr.io\\/linuxserver\\/jellyfin/"
      ]
    },
    {
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>r\\d)-ls(?<build>\\d+)$",
      "matchPackageNames": [
        "/^lscr.io\\/linuxserver\\/qbittorrent/"
      ]
    }
  ]
}
