{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Europe/Paris)",
    ":label(renovate)",
    ":semanticPrefixFix",
    ":automergePr",
    ":automergeStableNonMajor",
    ":automergeDigest",
    ":skipStatusChecks",
    ":disableRateLimiting",
    "docker:enableMajor"
  ],
  "timezone": "Europe/Paris",
  "labels": ["dependencies"],
  "minimumReleaseAge": "3 days",
  "flux": {
    "managerFilePatterns": ["/clusters/.+\\.ya?ml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/clusters/.+\\.ya?ml$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/clusters/.+\\.ya?ml$/"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process OCI dependencies",
      "managerFilePatterns": ["/^clusters/.+\\.yaml(?:\\.j2)?$/"],
      "matchStrings": ["oci://(?<depName>[^:]+):(?<currentValue>\\S+)"],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<revision>\\d+)-ls(?<build>\\d+)$",
      "matchPackageNames": ["/^lscr.io\\/linuxserver\\//"]
    },
    {
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)-ls(?<revision>\\d+)$",
      "matchPackageNames": ["/^lscr.io\\/linuxserver\\/prowlarr/"]
    },
    {
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-ls(?<build>\\d+)$",
      "matchPackageNames": ["/^lscr.io\\/linuxserver\\/bazarr/"]
    },
    {
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<compatibility>ubu\\d+)-ls(?<build>\\d+)$",
      "matchPackageNames": ["/^lscr.io\\/linuxserver\\/jellyfin/"]
    },
    {
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>r\\d)-ls(?<build>\\d+)$",
      "matchPackageNames": ["/^lscr.io\\/linuxserver\\/qbittorrent/"],
      "allowedVersions": "4.6.3"
    }
  ]
}
